@model IEnumerable<Teste___Webmail.Models.Email>
@using Microsoft.AspNet.Identity


@{
    ViewBag.Title = "Index";
}

<div class="container col-md-12">

    <h1>Bem Vindo</h1>
    <hr />

    <h4>Total de mensagens: @ViewBag.totalEmails</h4>

    @Html.ActionLink("Compor nova mensagem", "Create", "Email")

    <hr />
    <h4><b>Caixa de Entrada</b></h4>
    <br />
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destinatario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.Remetente == User.Identity.GetUserName())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destinatario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Assunto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mensagem)
                    </td>
                    <td>
                        @Html.ActionLink("Ver Detalhes", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }

    </table>



</div>


